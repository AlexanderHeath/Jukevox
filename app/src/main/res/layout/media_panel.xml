<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/panel_main"
    android:layout_height="60dp"
    android:layout_gravity="top" >

    <Button
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:id="@+id/panel_activate"
        android:text="+"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/panel_song"
        android:layout_toRightOf="@id/panel_activate"
        android:text="Song here"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/panel_artist"
        android:layout_toRightOf="@id/panel_activate"
        android:layout_below="@+id/panel_song"
        android:text="Artist here "/>

</RelativeLayout>